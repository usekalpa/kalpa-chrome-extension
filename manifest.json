{
  "manifest_version": 3,
  "name": "Kalpa",
  "version": "1.2.1",
  "description": "Save any webpage to your Kalpa universes",
  "permissions": ["activeTab", "storage", "alarms"],
  "host_permissions": [
    "https://usekalpa.com/*",
    "https://convex.usekalpa.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/kalpa-16.png",
    "32": "icons/kalpa-32.png",
    "48": "icons/kalpa-48.png",
    "128": "icons/kalpa-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Kalpa",
    "default_icon": {
      "16": "icons/kalpa-16.png",
      "32": "icons/kalpa-32.png",
      "48": "icons/kalpa-48.png",
      "128": "icons/kalpa-128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "lashit-shortcut": {
      "suggested_key": {
        "default": "Alt+Shift+L"
      },
      "description": "Save the current page to Kalpa"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "kalpa@usekalpa.com",
      "strict_min_version": "121.0"
    }
  }
}
